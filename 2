#include <stdio.h>

void longestIncreasingSubarray(int arr[], int n) {
    int max_length = 1; 
    int current_length = 1;
    int end_index = 0; 
    for (int i = 1; i < n; i++) {
       
        if (arr[i] > arr[i - 1]) {
            current_length++; 
        } else {
           
            if (current_length > max_length) {
                max_length = current_length;
                end_index = i - 1; 
            }
            current_length = 1;
        }
    }

    if (current_length > max_length) {
        max_length = current_length;
        end_index = n - 1; 
    }

   
    printf("Longest increasing subarray: ");
    for (int i = end_index - max_length + 1; i <= end_index; i++) {
        printf("%d ", arr[i]);
    }
    printf("\nLength: %d\n", max_length);
}

int main() {
    int arr[] = {3, 2, 5, 8, 6, 7, 9, 11, 13};
    int n = sizeof(arr) / sizeof(arr[0]);

    longestIncreasingSubarray(arr, n);

    return 0;
}
