#include <stdio.h>

void rearrange(int arr[], int n) {
    int left = 0; 
    int right = n - 1; 
    while (left <= right) {
       
        while (left < n && arr[left] < 0)
            left++;
        while (right >= 0 && arr[right] >= 0)
            right--;
        if (left <= right) {
            int temp = arr[left];
            arr[left] = arr[right];
            arr[right] = temp;
            left++;
            right--;
        }
    }
}

int main() {
    int arr[] = {-1, 3, -4, 5, 6, -7, 8, -10};
    int n = sizeof(arr) / sizeof(arr[0]);

    printf("Original array: ");
    for (int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    rearrange(arr, n);

    printf("Rearranged array: ");
    for (int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    return 0;
}
